function ranger {
  local tempfile="$(mktemp -t ranger.XXXXXX)"
  command ranger --choosedir="$tempfile"

  if [[ -f "$tempfile" ]] && [[ "$(cat -- "$tempfile")" != "$PWD" ]]; then
      cd -- "$(cat "$tempfile")" || return
      /usr/bin/rm -f "$tempfile" &>/dev/null
  fi

}

