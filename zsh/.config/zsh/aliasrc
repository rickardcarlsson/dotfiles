alias ranger="source ranger"
alias grep=rg
alias ls="exa"
alias la="exa -la"
alias bat="bat --color=always"
alias ..="cd .."
alias cp "cp -iv"
alias ogrep="/bin/grep"

function code() {
  # reference to the original `code` command
  local _code=$(whence -p code)
  # if incoming stdin via a pipe...
  if [[ -p /dev/stdin ]] ; then
    tmpFile=$(mktemp -p "$TMPDIR" stdin.XXXXXX)
    tee "$tmpFile" > /dev/null
    $_code -w "$tmpFile" &
  else
    # otherwise, pass along any arguments to the original `code`
    $_code "$@"
  fi
}